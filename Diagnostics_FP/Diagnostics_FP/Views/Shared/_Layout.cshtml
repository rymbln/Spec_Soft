<!DOCTYPE html>
<html>
<head>
    <title>@ViewBag.Title</title>
    <link href="@Url.Content("~/Content/SiteMetro.css")" rel="stylesheet" type="text/css" />
    <script src="@Url.Content("~/Scripts/jquery-1.5.1.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/jquery.unobtrusive-ajax.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/jquery.unobtrusive-ajax.min.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/dropdown.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/myReady.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/MicrosoftAjax.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/MicrosoftMvcAjax.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/MicrosoftMvcValidation.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/jquery-ui-1.8.11.min.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/jquery-ui-1.8.11.js")" type="text/javascript"></script>
    @RenderSection("script", false)
</head>
<body>
    <div class="page">
        <div id="header">
            <div class="nav-bar bg-color-darken">
                <div class="nav-bar-inner">
                    <span class="element brand">MLAB 2.0</span> <span class="divider"></span><span class="element">
                        @Html.Partial("_LogOnPartial") </span><span class="divider"></span>
                    <ul class="menu" style="overflow: visible;">
                        @if (Roles.IsUserInRole("Administrator"))
                        {
                            <li>@Html.ActionLink("Анализы", "MBAnalysisList", "MBAnalysis")</li>    
                            <li>@Html.ActionLink("Бесплатные анализы", "PatientListFree", "Patient")</li>
                            <li>@Html.ActionLink("Платные анализы", "PatientListPaid", "Patient")</li>
                         @*   <li>@Html.ActionLink("Организмы", "Index", "OrganismInProject")</li>*@
                            <li>@Html.ActionLink("Отчеты", "Index", "Report")</li>
                            <li>@Html.ActionLink("Справочники", "Index", "Knowall")</li>
                            <li>@Html.ActionLink("О проекте", "Index", "Home")</li>
                        }
                        else if (Roles.IsUserInRole("Operator"))
                        {
                            <li>@Html.ActionLink("Бесплатные анализы", "PatientListFree", "Patient")</li>
                            <li>@Html.ActionLink("Платные анализы", "PatientListPaid", "Patient")</li>
                            <li>@Html.ActionLink("О проекте", "Index", "Home")</li>
                        }
                        else if (Roles.IsUserInRole("Laboratory"))
                        {         
                            <li>@Html.ActionLink("Анализы", "MBAnalysisList", "MBAnalysis")</li>  
                            <li>@Html.ActionLink("О проекте", "Index", "Home")</li>
                        }
                    </ul>
                </div>
            </div>
        </div>
        <div id="main">
            @RenderBody()
        </div>
        <div id="footer">
        </div>
    </div>
</body>
</html>
