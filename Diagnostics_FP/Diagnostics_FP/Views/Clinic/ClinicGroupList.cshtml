@model IEnumerable<Diagnostics_FP.Models.ClinicGroup>
@{
    ViewBag.Title = "Клиники";
}
@using Diagnostics_FP.Helpers;
@using Diagnostics_FP.Models;
<h2>@ViewBag.Title</h2>
@using (Html.BeginForm())
{
    @Html.ValidationSummary(true)
    <p>
        Фильтр: @Html.TextBox("SearchString", ViewBag.CurrentFilter as String)
        &nbsp;
        <input type="submit" value="Поиск" />
        @Html.ActionLink("Сброс", "ClinicGroupList", new { clinicGroupID = 0 }, null)
    </p>
}
<table class="striped" style="width: auto">
    <tr>
        <th>
        </th>
        <th>@Html.ActionLink("Название", "ClinicGroupList", new { sortOrder = ViewBag.DescriptionSortParm, currentFilter = ViewBag.CurrentFilter })
        </th>
        <th>@Html.ActionLink("ИНН", "ClinicGroupList", new { sortOrder = ViewBag.INNSortParm, currentFilter = ViewBag.CurrentFilter })
        </th>
    </tr>
    @foreach (var item in Model)
    {
        string selectedRow = "";
        if (item.ClinicGroupID == ViewBag.ClinicGroupID)
        {
            selectedRow = "selected-row";
        } 
        <tr class="@selectedRow">
            <td>
                @Html.ActionLink("Показать", "ClinicGroupList", new { clinicGroupId = item.ClinicGroupID, currentFilter = ViewBag.CurrentFilter })
                |
                @Html.ActionLink("Правка", "EditClinicGroup", new { id = item.ClinicGroupID }) |
                @Html.ActionLink("Удалить", "DeleteClinicGroup", new { id = item.ClinicGroupID }, new { onclick = "return confirm('Вы действительно хотите удалить?')" })
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Description)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.INN)
            </td>
        </tr>
    }
</table>
<p>
    @Html.PagingNavigator((int)Html.ViewData["PageNum"], (int)Html.ViewData["itemsCount"], (int)Html.ViewData["pageSize"], 9, (string)ViewBag.CurrentFilter, (string)ViewBag.CurrentSort)
</p>
@if (ViewBag.ClinicList != null)
{
    if (ViewBag.ClinicListCount > 0)
    {
    <table>
        <tr>
            <th>
            </th>
            <th>
                Название отделения
            </th>
        </tr>
        @foreach (var iClinic in ViewBag.ClinicList)
        {
            <tr>
                <td>
                    @Html.ActionLink("Правка", "EditClinic", new { id = iClinic.ClinicID, clinicGroupID = iClinic.ClinicGroupID })
                    |
                    @Html.ActionLink("Удалить", "DeleteClinic", new { id = iClinic.ClinicID, clinicGroupID = iClinic.ClinicGroupID }, new { onclick = "return confirm('Вы действительно хотите удалить?')" })
                </td>
                <td>@iClinic.Description
                </td>
            </tr>
        }
    </table>
    }
    else
    {
    <p>
        Для данной клиники не назначено отделений</p>
    }
    <br />
}
<div>
    <br />
    @Html.ActionLink("Новая клиника", "CreateClinicGroup")
    @if (ViewBag.ClinicList != null)
    {
        @Html.ActionLink("Новое отделение", "CreateClinic", new { id = ViewBag.ClinicGroupID })
    }
    @Html.ActionLink("Назад", "Index", "Knowall")
</div>
