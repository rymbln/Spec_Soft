@model Diagnostics_FP.Models.MBAnalysisType  
@{
    ViewBag.Title = Model.DescriptionRus;
}
<h3>
    Редактирование Микробиологического анализа @ViewBag.Title</h3>
<p class="error">@ViewBag.ConcurrencyErrorMessage</p>
<script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>
<script src="~/Scripts/MicrosoftAjax.js"></script>
<script src="~/Scripts/MicrosoftMvcAjax.js"></script>
@using (Html.BeginForm())
{
    @Html.ValidationSummary(true)
    @Ajax.GlobalizationScript()
    <fieldset>
        <legend>Внесите необходимые изменения и нажмите кнопку [Сохранить]</legend>
        @Html.HiddenFor(model => model.MBAnalysisTypeID)
        @Html.HiddenFor(model => model.Timestamp)
        @Html.HiddenFor(model => model.DateAdd)
        @Html.HiddenFor(model => model.DateUpdate)
        @Html.HiddenFor(model => model.Suser)
        <div class="editor-label">
            @Html.LabelFor(model => model.Code)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.Code)
            @Html.ValidationMessageFor(model => model.Code)
        </div>
        <div class="editor-label">
            @Html.LabelFor(model => model.DescriptionEng)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.DescriptionEng)
            @Html.ValidationMessageFor(model => model.DescriptionEng)
        </div>
        <div class="editor-label">
            @Html.LabelFor(model => model.DescriptionRus)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.DescriptionRus)
            @Html.ValidationMessageFor(model => model.DescriptionRus)
        </div>
        <div class="editor-label">
            @Html.LabelFor(model => model.IsInUse)
        </div>
        <div class="editor-field">
            @Html.DropDownListFor(model => model.IsInUse, ViewData["logicList"] as SelectList)
            @Html.ValidationMessageFor(model => model.IsInUse)
        </div>
        <br />
        <p>
            <input type="submit" value="Сохранить" />
            @Html.ActionLink("Назад", "Index")
        </p>
    </fieldset>
        
}
