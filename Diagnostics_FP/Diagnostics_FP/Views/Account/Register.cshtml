@model Diagnostics_FP.Models.RegisterModel

@{
    ViewBag.Title = "Регистрация пользователя";
}

<h2>Регистрация пользователя</h2>
<p>
    Используйте форму для регистрации нового пользователя
</p>
<p>
    Пароль должен состоять минимум из @Membership.MinRequiredPasswordLength символов
</p>

<script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>

@using (Html.BeginForm()) {
    @Html.ValidationSummary(true, "Регистрация пользователя не удалась. Пожалуйста, исправьте ошибки и повторите снова.")
    <div>
        <fieldset>
            <legend>Информация о пользователе</legend>

            <div class="editor-label">
                @Html.LabelFor(m => m.UserName)
            </div>
            <div class="editor-field">
                @Html.TextBoxFor(m => m.UserName)
                @Html.ValidationMessageFor(m => m.UserName)
            </div>

            <div class="editor-label">
                @Html.LabelFor(m => m.Email)
            </div>
            <div class="editor-field">
                @Html.TextBoxFor(m => m.Email)
                @Html.ValidationMessageFor(m => m.Email)
            </div>

            <div class="editor-label">
                @Html.LabelFor(m => m.Password)
            </div>
            <div class="editor-field">
                @Html.TextBoxFor(m => m.Password)
                @Html.ValidationMessageFor(m => m.Password)
            </div>

            <div class="editor-label">
                @Html.LabelFor(m => m.ConfirmPassword)
            </div>
            <div class="editor-field">
                @Html.TextBoxFor(m => m.ConfirmPassword)
                @Html.ValidationMessageFor(m => m.ConfirmPassword)
            </div>
        <div class="editor-label">
            @Html.LabelFor(m => m.Role, "Role")
        </div>
        <div class="editor-field">
        @Html.DropDownList("Role", (IEnumerable<SelectListItem>)ViewBag.roleList)
        @Html.ValidationMessageFor(m => m.Role )
        </div>
            <br />
            <p>
                <input type="submit" value="Зарегистрировать" />
                @Html.ActionLink("Назад", "Index")
            </p>
        </fieldset>
    </div>
}
