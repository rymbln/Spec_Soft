@model Diagnostics_FP.Models.EditUserModel 

@{
    ViewBag.Title = "Изменение ролей";
}

<h2>Изменение ролей пользователя</h2>

<script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>

@using (Html.BeginForm()) {
    @Html.ValidationSummary(true, "Изменить параметры пользователя не удалось. Пожалуйста, исправьте ошибки и попробуйте снова.")
    <div>
        <fieldset>
            <legend>Информация о пользователе</legend>

            <div class="editor-label">
                @Html.LabelFor(m => m.UserName)
            </div>
            <div class="editor-field">
                @Html.EditorFor(m => m.UserName)
                @Html.ValidationMessageFor(m => m.UserName)
            </div>

            <div class="editor-label">
                @Html.LabelFor(m => m.Email)
            </div>
            <div class="editor-field">
                @Html.EditorFor(m => m.Email)
                @Html.ValidationMessageFor(m => m.Email)
            </div>

            <br />

        <div class="editor-field">
            <p>Роли пользователя</p>
            <table style="width: 100%" title="Роли пользователя">
                <tr>
                    @{
                        int cnt = 0;
                        List<SelectListItem> roles = ViewBag.roleItems;

                        foreach (var role in roles) {
                            if (cnt++ % 3 == 0) {
                                @:  </tr> <tr> 
                            }
                            @: <td> 
                                <input type="checkbox" 
                                       name="selectedRoles" 
                                       value="@role.Value" 
                                       @(Html.Raw(role.Selected ? "checked=\"checked\"" : "")) /> 
                                @role.Value @:&nbsp;
                            @:</td>
                        }
                        @: </tr>
                    }
            </table>
        </div>
            <br />
            <p>
                <input type="submit" value="Сохранить" />
      @Html.ActionLink("Назад", "Index")
            </p>
        </fieldset>
    </div>
}
